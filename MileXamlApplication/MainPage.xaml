<Page
  x:Class="MileXamlApplication.MainPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="using:MileXamlApplication"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">
  <Grid>

    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="auto" />
    </Grid.RowDefinitions>

    <Grid
      x:Name="TitleGrid"
      Height="32"
      Background="{ThemeResource SystemChromeHighColor}"
      Visibility="Collapsed">
      <Grid
        x:Name="realTitle"
        Grid.Column="0"
        Grid.ColumnSpan="6"
        Background="Transparent" />

      <TextBlock
        Grid.Column="1"
        Margin="12,0,0,0"
        VerticalAlignment="Center"
        FontSize="12"
        Text="Nagisa (PREVIEW)" />
    </Grid>

    <Grid
      x:Name="ToolBarGrid"
      Grid.Row="1"
      Height="44"
      Background="{ThemeResource SystemChromeHighColor}">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="4" />
        <ColumnDefinition Width="44" />
        <ColumnDefinition Width="44" />
        <ColumnDefinition Width="44" />
        <ColumnDefinition Width="44" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="44" />
        <ColumnDefinition Width="44" />
        <ColumnDefinition Width="4" />
      </Grid.ColumnDefinitions>

      <Button
        x:Uid="/MainPage/NewTaskAppBarButton"
        Grid.Column="1"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="Transparent"
        Content="&#xE710;"
        FontFamily="Segoe MDL2 Assets"
        FontSize="20"
        ToolTipService.ToolTip="[New Task]"
        AutomationProperties.Name="[New Task]"/>
      <Button
        x:Uid="/MainPage/StartAllAppBarButton"
        Grid.Column="2"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="Transparent"
        Content="&#xE768;"
        FontFamily="Segoe MDL2 Assets"
        FontSize="20"
        ToolTipService.ToolTip="[Start All]" />
      <Button
        x:Uid="/MainPage/PauseAllAppBarButton"
        Grid.Column="3"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="Transparent"
        Content="&#xE769;"
        FontFamily="Segoe MDL2 Assets"
        FontSize="20"
        ToolTipService.ToolTip="[Pause All]" />
      <Button
        x:Uid="/MainPage/ClearListAppBarButton"
        Grid.Column="4"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="Transparent"
        Content="&#xE74D;"
        FontFamily="Segoe MDL2 Assets"
        FontSize="20"
        ToolTipService.ToolTip="[Clear List]" />
      <AutoSuggestBox
        x:Name="SearchAutoSuggestBox"
        x:Uid="/MainPage/SearchAutoSuggestBox"
        Grid.Column="5"
        Grid.ColumnSpan="2"
        Margin="6,0"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        BorderThickness="0"
        PlaceholderText="[Search Downloads]"
        QueryIcon="Find" />
      <Button
        x:Uid="/MainPage/TaskItemMoreButton"
        Grid.Column="7"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="Transparent"
        Content="&#xE712;"
        FontFamily="Segoe MDL2 Assets"
        FontSize="20"
        ToolTipService.ToolTip="[Menu]">
        <Button.Flyout>
          <MenuFlyout>
            <MenuFlyoutItem
              x:Uid="/MainPage/OpenDownloadsFolderAppBarButton"
              Icon="Folder"
              Text="[Open Downloads Folder]" />
            <MenuFlyoutItem
              x:Uid="/MainPage/SettingsAppBarButton"
              Icon="Setting"
              Text="[Settings]" />
            <MenuFlyoutSeparator />
            <MenuFlyoutItem
              x:Uid="/MainPage/AboutAppBarButton"
              Icon="Help"
              Text="[About]" />
          </MenuFlyout>
        </Button.Flyout>
      </Button>


    </Grid>

    <ListView
      x:Name="TaskList"
      Grid.Row="2">
      <ListView.ItemContainerStyle>
        <Style TargetType="ListViewItem">
          <Setter Property="HorizontalContentAlignment" Value="Stretch" />
          <Setter Property="VerticalContentAlignment" Value="Stretch" />
          <Setter Property="Padding" Value="0" />
        </Style>
      </ListView.ItemContainerStyle>

    </ListView>

    <TextBlock
      x:Name="TaskListNoItemsTextBlock"
      x:Uid="/MainPage/TaskListNoItemsTextBlock"
      Grid.Row="2"
      Margin="16"
      Text="[No Downloads]"
      TextAlignment="Center" />

    <StackPanel
      x:Name="StatusBarStackPanel"
      Grid.Row="3"
      Padding="8"
      Background="{ThemeResource SystemChromeHighColor}"
      Orientation="Horizontal">
      <StackPanel
        x:Uid="/MainPage/TotalDownloadBandwidthStackPanel"
        Margin="8"
        Orientation="Horizontal"
        ToolTipService.ToolTip="[Total Download Bandwidth]">
        <FontIcon
          Margin="0,0,8,0"
          VerticalAlignment="Center"
          FontSize="15"
          Glyph="&#xE74B;" />
        <TextBlock
          VerticalAlignment="Center"
          FontSize="15"
          Text="1 GiB"/>
        <TextBlock
          VerticalAlignment="Center"
          FontSize="15"
          Text="/s" />
      </StackPanel>
      <StackPanel
        x:Uid="/MainPage/TotalUploadBandwidthStackPanel"
        Margin="8"
        Orientation="Horizontal"
        ToolTipService.ToolTip="[Total Upload Bandwidth]">
        <FontIcon
          Margin="0,0,8,0"
          VerticalAlignment="Center"
          FontSize="15"
          Glyph="&#xE74A;" />
        <TextBlock
          VerticalAlignment="Center"
          FontSize="15"
          Text="128 MiB"/>
        <TextBlock
          VerticalAlignment="Center"
          FontSize="15"
          Text="/s" />
      </StackPanel>
    </StackPanel>
  </Grid>
</Page>
